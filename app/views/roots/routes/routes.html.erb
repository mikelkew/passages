<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'roots/application', media: 'all' %>
  <%= javascript_include_tag 'https://code.jquery.com/jquery-2.1.4.min.js' %>
  <%= javascript_include_tag 'roots/application' %>
  <title>Roots</title>
</head>
  <body class='container'>
    <div class='col-xs-6 '>
      <input class='form-control' type='text' placeholder='Search for...'/>
    </div>

    <div class='col-xs-12 vertical-spacer'></div>

    <div class ='col-xs-12 '>
      <h2>Engine Routes</h2>
        <% @route_collection.engine_routes.each do |engine_name, engine_hash| %>
          <table class='table table-striped table-bordered'>
            <tr>
              <td colspan='2'><b>Routes for Engine:</b> <%= engine_name %></td>
              <td colspan='3'><b>Mounted at:</b> <%= engine_hash[:mount].path %></td>
            </tr>

            <%= render partial: 'routes_header', locals: { collection: @route_collection } %>
            <% engine_hash[:routes].each do |route| %>
              <%= render partial: 'route', locals: { route: route, attributes_for_display: @route_collection.attributes_for_display } %>
            <% end %>
          </table>
        <% end %>
      <h2>App Routes</h2>
        <table class='table table-striped table-bordered'>
          <%= render partial: 'routes_header', locals: { collection: @route_collection } %>
          <% @route_collection.application_routes.each do |route| %>
            <%= render partial: 'route', locals: { route: route, attributes_for_display: @route_collection.attributes_for_display } %>
          <% end %>
        </table>
    </div>
  </body>
</html>
