<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'roots/application', media: 'all' %>
  <title>Roots</title>
</head>
  <body class='container'>
    <div class='col-xs-6 '>
      <input class='form-control' type='text' placeholder='Search for...'/>
    </div>

    <div class='col-xs-12 vertical-spacer'></div>

    <div class ='col-xs-12 '>
      <h2>Engine Routes</h2>
        <% @route_collection.engine_routes.each do |engine_hash| %>
          <table class='table table-striped table-bordered'>
            <tr>
              <td colspan='5'><b>Engine:</b> <%= engine_hash[:app] %></td>
            </tr>
            <%= render partial: 'routes_header', locals: { collection: @route_collection } %>
            <% engine_hash[:routes].each do |route| %>
              <%= render partial: 'route', locals: { route: route, collection: @route_collection } %>
            <% end %>
          </table>
        <% end %>
      <h2>App Routes</h2>
        <table class='table table-striped table-bordered'>
          <%= render partial: 'routes_header', locals: { collection: @route_collection } %>
          <% @route_collection.application_routes.each do |route_hash| %>
            <% route_hash[:routes].each do |route| %>
              <%= render partial: 'route', locals: { route: route, collection: @route_collection } %>
            <% end %>
          <% end %>
        </table>
    </div>
  </body>
</html>
